<h1>Packages#index</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Publication Date</th>
    </tr>
  </thead>
  <tbody>
    <% if @packages.any? %>
      <% @packages.each do |p| %>
        <tr>
          <td><%= link_to p.name, package_path(p) %></td>
          <td><%= p.latest_version.value %></td>
          <td><%= p.latest_version.published_at %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colsize=3">No Packages Yet</td>
      </tr>
    <% end %>
  </tbody>
</table>
